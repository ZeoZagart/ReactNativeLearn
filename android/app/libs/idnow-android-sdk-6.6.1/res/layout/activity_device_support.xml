<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/idnow_di_25dp"
    android:paddingEnd="@dimen/idnow_di_25dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/idnow_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/idnow_di_20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/idnow_di_40dp" />

    <TextView
        android:id="@+id/title_requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/vip_title"
        android:layout_marginTop="@dimen/idnow_di_20dp"
        android:text="@string/title_requirement"
        android:scaleType="fitCenter" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/resolution_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|top"
        android:layout_marginTop="@dimen/idnow_di_20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >
    <TextView
        android:id="@+id/text_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="normal"
        android:layout_marginBottom="@dimen/idnow_di_20dp"
        android:text="@string/text_reequirement"
        android:textColor="@color/primarytextColor"
        android:layout_marginTop="@dimen/idnow_di_20dp"
        android:textSize="@dimen/vip_text" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/idnow_di_20dp"
        android:background="@drawable/rounded_background_orange"
        android:gravity="center"
        android:padding="12dp"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/idnow_ts_18" />
        </LinearLayout>
</LinearLayout>