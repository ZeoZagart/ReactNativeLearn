<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:animateLayoutChanges="false"
              android:background="@color/bgPrimaryColor"
              android:orientation="vertical">

    <View
        android:id="@+id/videoIdentExplanationViewDividerTop"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/video_ident_explanation_view_divider_top"
        android:visibility="visible">
    </View>

    <LinearLayout
        android:id="@+id/linearLayoutExplanationContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgPrimaryColor"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <include
            android:id="@+id/notifyViaPushView"
            layout="@layout/view_live_screen_push_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:visibility="gone">
        </include>

        <TextView
            android:id="@+id/textViewExplanationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="32dp"
            android:paddingTop="4dp"
            android:textColor="@color/live_stream_explanation_title_color"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textViewExplanationContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/step_start"
            android:textSize="18sp"
            android:textColor="@color/live_stream_explanation_content_color"/>
    </LinearLayout>

</LinearLayout>