<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="3"
    android:background="@color/bgPrimaryColor"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1.5"
        >

        <Button
            android:id="@+id/showContractTextViewRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAllCaps="false"
            android:layout_margin="6dp"
            android:layout_gravity="left"
            android:background="@color/bgSecondaryColor"
            android:drawableLeft="@drawable/action_show_contract"
            android:drawablePadding="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/e_signature_check_contract"
            android:textColor="@color/primarytextColor"/>

        <TextView
            android:id="@+id/headlineReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDnow Registration"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/primarytextColor"/>
        <TextView
            android:id="@+id/instructionReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With an IDnow account you can sign further documents simply by logging in"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/primarytextColor"/>
        <TextView
            android:id="@+id/hintReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please make sure that your e-mail address and mobile phone number are correct."
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/primarytextColor"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.2"
        >

        <EditText
            android:id="@+id/emailReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text=""
            android:background="@color/bgSecondaryColor"
            android:textColor="@color/basicInputField"
            android:layout_marginBottom="20dp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/mobilePhoneReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="text|number"
            android:textColor="@color/basicInputField"
            android:background="@color/bgSecondaryColor"
            android:text="" />

        <TextView
            android:id="@+id/noRegistrationReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't want to register an account?"
            android:textColor="@color/primaryColor"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/abortReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/bgSecondaryColor"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textColor="@color/buttontextColor"
                android:text="Cancel" />

            <Button
                android:id="@+id/confirmReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                android:background="@color/bgSecondaryColor"
                android:textColor="@color/buttontextColor"
                android:padding="5dp"
                android:text="Confirm" />

        </RelativeLayout>



    </LinearLayout>
</LinearLayout>
